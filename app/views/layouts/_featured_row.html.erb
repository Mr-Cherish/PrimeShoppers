<%
  @category1 = Category.first
  @category2 = Category.second
  @category3 = Category.third
%>
  <h1 class="text-center">Featured Collection</h1>
  <br/>
  <div class="container">
    <div class="row justify-content-md-center justify-content-center">
      <div class="col-md-3 col-7">
        <a href='<%= category_path(@category1) %>'>
          <img src='./assets/1.png' height="auto" width="100%" class="img collection-img" alt='Collection1'/>
        </a>
        <h3 class="text-center"><%= @category1.name %></h3>
      </div>

      <div class='col-md-1'></div>

      <div class="col-md-3 col-7">
        <a href='<%= category_path(@category2) %>'>
          <img src='./assets/2.png' height="auto" width="100%" class="img collection-img" alt='Collection2'/>
        </a>
        <h3 class="text-center"><%= @category2.name %></h3>
      </div>

      <div class='col-md-1'></div>

      <div class="col-md-3 col-7">
        <a href='<%= category_path(@category3) %>'>
          <img src='./assets/3.png' height="auto" width="100%" class="img collection-img" alt='Collection3'/>
        </a>
        <h3 class="text-center"><%= @category3.name %></h3>
      </div>

    </div>
  </div>
  <br/><br/><br/><br/><br/><br/>
  <style media="screen">
    .collection-img {
      transition: border 0.5s ease-in-out;
    }
    .collection-img:hover {
      border: 10px solid lightgray;
    }
  </style>